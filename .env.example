# Required external service credentials
ANTHROPIC_API_KEY=your_anthropic_api_key

# Required webhook auth and CORS config
WEBHOOK_SECRET=change_this_shared_secret
# Optional: if unset, review endpoints reuse WEBHOOK_SECRET.
ADMIN_API_KEY=
ALLOWED_ORIGINS=http://localhost:5678,http://localhost:3000,http://127.0.0.1:3000

# Required model identifiers
EXTRACTION_MODEL=your_available_anthropic_model_id
VALIDATION_MODEL=your_available_anthropic_model_id
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
POLICY_THRESHOLD=500000

# Optional backward-compatible override for Anthropic API key
LLM_API_KEY=

# Webhook/runtime safety controls
MAX_UPLOAD_SIZE_BYTES=10485760
WEBHOOK_SYNC_TIMEOUT_SECONDS=30
PIPELINE_WORKERS=4
WEBHOOK_IDEMPOTENCY_ENABLED=true
EXTRACTION_MAX_INPUT_CHARS=24000

# Embedding runtime options
EMBEDDING_DEVICE=cpu
EMBEDDING_CACHE_DIR=./.cache/huggingface
EMBEDDING_LOCAL_FILES_ONLY=false

ANONYMIZED_TELEMETRY=FALSE

# Required database connection
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/contracts
LOG_LEVEL=INFO
